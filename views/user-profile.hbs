<div>
    <img src= {{ user.profileImage }}>
    <h2>
        {{#if isSameChef}}
        Welcome, {{ user.username }}!
        {{else}}
        Welcome to {{ user.username }}'s page
        {{/if}}
        </h2>
    <p>{{ user.userBio }}</p>
    <div>
        {{#if isSameChef}}
        <a href="/edit-profile"><button class="edit-btn" type="button">Edit Profile</button></a>
        {{/if}}
    </div>
</div>

<div class="grid">
    {{#each user.userRecipes}}
    <div style="background-image: {{ this.image }}">
        <h4>{{ this.title }}</h4>
        <a href="/recipe">Read Recipe</a>
    </div>
    {{/each}}
</div>