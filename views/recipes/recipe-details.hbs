{{#if changeableComments}}
  <h3>git add</h3>
  {{#each changeableComments}}
  <div style="display: flex;">
     <p> <b>{{ this.user }} said: </b> {{ this.comment }}</p>
    {{#if this.isChangeable}}
      <a href="/comment/edit/{{this._id}}">Edit</a>
      <form action="/comment/delete/{{this._id}}" method="POST">
        <button type="submit"> Delete </button>
      </form>
  </div>
   
    {{/if}}
  {{/each}}
{{/if}}

